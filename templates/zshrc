# Add zmodload zsh/zprof at the top of your zshrc and zprof at the bottom to profile
# zmodload zsh/zprof

# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

# ZSH_THEME="gozilla"
# ZSH_THEME="robbyrussell"
# ZSH_THEME="kolo"
# ZSH_THEME='frisk' # a theme works in ubuntu
ZSH_THEME='af-magic'
# ZSH_THEME='platts'
DISABLE_AUTO_UPDATE="true"
COMPLETION_WAITING_DOTS="true"

# Completion
fpath=(/usr/local/share/zsh-completions $fpath)

# Plugins
plugins=(bundler autojump cp extract history history-substring-search per-directory-history theme vagrant rsync git gitfast)

source $ZSH/oh-my-zsh.sh

# Disable auto-correct
unsetopt correct_all

# Check if a command is available
function command_exists() { which "$1" >/dev/null 2>/dev/null }

if command_exists vim; then
  alias vi='vim'
fi

export EDITOR='vi'
export VISUAL='vi'
export PAGER='less'
export BUNDLER_EDITOR=sb3
#export LC_ALL=en_US.utf-8 
#export LANG="$LC_ALL" #set encoding for vim nerdtree
source ~/.aliases

# Customize to your needs...
export PATH=$PATH:/usr/local/sbin:/usr/sbin:/sbin

# Support npm
export PATH=$PATH:/usr/local/share/npm/bin/

# # rvm for zsh
# export PATH=$HOME/bin:$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting
# [[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM

# rbenv for zsh
export PATH="$HOME/.rbenv/bin:${PATH}"
export PATH="$HOME/.rbenv/shims:${PATH}"
rbenv rehash 2>/dev/null


#bindkey -v
#bindkey ‘^R’ history-incremental-search-backward

export AWS_CONFIG_FILE="~/AWS_CONFIG_FILE"
source /usr/local/bin/aws_zsh_completer.sh
# zprof
